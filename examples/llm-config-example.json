{
    "name": "Medium MCP 伺服器設定",
    "version": "1.0.0",
    "description": "整合 Medium MCP 伺服器與 LLM 的範例設定",
    "tools": [
        {
            "name": "publish-article",
            "description": "在 Medium 上發布新文章",
            "parameters": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "description": "文章標題",
                        "minLength": 5,
                        "maxLength": 100,
                        "examples": [
                            "AI 的未來",
                            "2025 年機器學習的突破"
                        ]
                    },
                    "content": {
                        "type": "string",
                        "description": "文章的 Markdown 內容",
                        "minLength": 100,
                        "examples": [
                            "# 人工智慧簡介\n\n近年來，AI 已經改變了..."
                        ]
                    },
                    "tags": {
                        "type": "array",
                        "description": "文章標籤",
                        "items": {"type": "string"},
                        "maxItems": 5,
                        "examples": [
                            ["科技", "人工智慧", "機器學習"]
                        ]
                    },
                    "publicationId": {
                        "type": "string",
                        "description": "用於發布的選用出版物 ID",
                        "examples": ["publication-xyz"]
                    }
                },
                "required": ["title", "content"]
            }
        },
        {
            "name": "search-articles",
            "description": "搜尋和篩選 Medium 文章",
            "parameters": {
                "type": "object",
                "properties": {
                    "keywords": {
                        "type": "array",
                        "description": "在文章中搜尋的關鍵字",
                        "items": {"type": "string"},
                        "examples": [
                            ["人工智慧", "科技"]
                        ]
                    },
                    "tags": {
                        "type": "array",
                        "description": "依標籤篩選文章",
                        "items": {"type": "string"},
                        "examples": [
                            ["機器學習", "資料科學"]
                        ]
                    },
                    "publicationId": {
                        "type": "string",
                        "description": "依出版物篩選文章",
                        "examples": ["publication-xyz"]
                    }
                }
            }
        },
        {
            "name": "get-publications",
            "description": "取得使用者的 Medium 出版物",
            "parameters": {}
        }
    ],
    "usage_guidelines": {
        "authentication": "需要有效的 Medium 開發者憑證",
        "privacy_note": "請尊重 Medium 的服務條款和內容指南",
        "rate_limits": "請遵守 Medium API 的速率限制"
    }
}
